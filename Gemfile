source 'https://rubygems.org'

puppetversion = ENV.key?('PUPPET_VERSION') ? "= #{ENV['PUPPET_VERSION']}" : ['= 4.10.1']

gem 'puppet', puppetversion

gem 'rspec'
gem 'rspec-puppet'
gem 'puppetlabs_spec_helper'

gem 'puppet-syntax'
gem 'puppet-lint'
gem 'metadata-json-lint'

gem 'coveralls', require: false
